<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:w="urn:import:nl.yogh.gwt.wui.widget"
  xmlns:c="urn:import:nl.yogh.aerius.wui.euronoise.component">
  <ui:with field='i18n' type='nl.yogh.aerius.wui.i18n.ApplicationMessages' />
  <ui:with field='res' type='nl.yogh.aerius.wui.resources.R.ApplicationResource' />
  <ui:style>
    .layerPanel {
    box-shadow: 0px -2px 2px #bbb;
    position: absolute;
    bottom: 0px;
    background: white;
    width: 100%;
    }
    .panelClicker {
    padding: 10px;
    user-select: none;
    }
    .label {
    padding: 0px 10px;
    }
  </ui:style>
  <g:FlowPanel styleName="{res.css.flex} {res.css.grow}">
    <g:Widget ui:field="mapPanel" styleName="{res.css.grow}" />
  </g:FlowPanel>
</ui:UiBinder>
